{
  "name": "@friendly-system/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "prisma generate && tsc",
    "check-types": "tsc --noEmit",
    "lint": "eslint src/",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:create-test": "sh -c 'export DATABASE_URL=${ADMIN_DATABASE_URL:-postgresql://postgres:postgres@localhost:5432/postgres}; pnpm exec prisma db execute --file ./scripts/create-test-db.sql || true'",
    "test": "sh -c 'export NODE_ENV=test; export DATABASE_URL=${DATABASE_URL:-postgresql://postgres:postgres@localhost:5432/friendly_system_test}; vitest run'",
    "test:watch": "sh -c 'export NODE_ENV=test; export DATABASE_URL=${DATABASE_URL:-postgresql://postgres:postgres@localhost:5432/friendly_system_test}; vitest'",
    "test:ci": "sh -c 'export NODE_ENV=test; export DATABASE_URL=${DATABASE_URL:-postgresql://postgres:postgres@localhost:5432/friendly_system_test}; pnpm --filter @friendly-system/shared build && pnpm run db:create-test && pnpm exec prisma generate && pnpm exec prisma migrate deploy && vitest run --coverage'",
    "dev": "tsx watch src/index.ts"
  },
  "dependencies": {
    "@friendly-system/shared": "workspace:*",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "argon2": "^0.44.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "pino": "^10.3.0",
    "pino-http": "^11.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.1",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.18",
    "pino-pretty": "^13.1.3",
    "prisma": "^7.3.0",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0"
  }
}
